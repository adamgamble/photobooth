:css
  @font-face {
      font-family: 'snell_roundhandregular';
      src: url('#{Rails.root}/public/ufonts.com_snell_roundhand_script_1_-webfont.eot');
      src: url('#{Rails.root}/public/ufonts.com_snell_roundhand_script_1_-webfont.eot?#iefix') format('embedded-opentype'),
        url('#{Rails.root}/public/ufonts.com_snell_roundhand_script_1_-webfont.woff') format('woff'),
          url('#{Rails.root}/public/ufonts.com_snell_roundhand_script_1_-webfont.ttf') format('truetype'),
            url('#{Rails.root}/public/ufonts.com_snell_roundhand_script_1_-webfont.svg#snell_roundhandregular') format('svg');
      font-weight: normal;
      font-style: normal;

  }

  body {
    width: 5in;
    height: 7in;
  }

  img {
     -webkit-transform: scaleY(-1);
     width: 4in;
     height: 2.25in;
     -webkit-box-shadow: 1px -3px 5px 0px rgba(0,0,0,0.75);
     float: left;
     margin-bottom: 5px;
  }

  span {
    position: absolute;
    top: 315px;
    left: 110px;
    width: 650px;
    -webkit-transform: rotate(90deg);
    font-family: 'snell_roundhandregular';
    font-size: 32pt;
  }
